.cred{color:red;}
.cgreen{color:green;}

*{margin:0;padding:0; }
a{text-decoration:none;}
ul,li{list-style:none;margin:0;}
.tab_body{text-align:center;text-shadow:1px 0px 0px #000;font-family:Microsoft Yahei; font-size:15px;}
.tab_body li{  width:106px; height:36px; line-height:36px; float:left;margin:0 0 0 -10px; background: url(../../images/nrfb/ss2.png) no-repeat;}
.tab_body li a{ color:white;}
.tab_body .cur{ display:block;width:106px; height:36px; line-height:36px;color:#000;font-weight:bold;background: url(../../images/nrfb/ss1.png) no-repeat;text-shadow:1px 1px 1px #FFF;}


