            createSubControl: function(arg) {&#xD;
                var checkbox = $invokeSuper.call(this, arguments);&#xD;
                checkbox.set({&#xD;
                    offValue: &quot;0&quot;,&#xD;
                    onValue: &quot;1&quot;,&#xD;
